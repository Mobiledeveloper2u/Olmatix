<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

        <TextView
            android:id="@+id/scene_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/txGen"
            android:gravity="left|center_vertical"
            android:text="Scene ID"
            android:textColor="@color/black"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/scene_name"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical|center_horizontal"
            android:text="Scene Name"
            android:textColor="@color/black"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/scene_job"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:text="Scene Job"
            android:textColor="@color/black"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/scene_command"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:text="Scene Command"
            android:textColor="@color/black"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/imgActions"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:gravity="right|center_horizontal"
            android:onClick="onClick"
            android:clickable="true"
            android:text="Delete"
            android:textColor="@color/red"
            android:src="@android:drawable/ic_menu_delete"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_weight="1"/>

</LinearLayout>