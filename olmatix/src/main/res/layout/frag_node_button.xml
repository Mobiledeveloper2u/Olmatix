<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="0dp">



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5sp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/icon_node"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:fitsSystemWindows="true"
                android:src="@mipmap/olmatixlogo"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/node_name"
                android:layout_toRightOf="@+id/icon_node"
                android:layout_alignParentTop="true"
                android:textSize="20sp"
                android:text="Node Name"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/statuslabel"
                android:textSize="20sp"
                android:layout_toRightOf="@+id/icon_node"
                android:layout_below="@+id/node_name"
                android:text="Status: "
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/status"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="5sp"
                android:paddingLeft="5sp"
                android:layout_toRightOf="@+id/statuslabel"
                android:layout_below="@+id/node_name"
                android:text="ON"
                android:background="@drawable/border"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/uptime"
                android:layout_marginRight="0sp"
                android:text="Uptime"
                android:layout_toRightOf="@+id/icon_node"
                android:layout_below="@id/status"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fw_name"
                android:layout_toRightOf="@+id/icon_node"
                android:layout_below="@id/uptime"
                android:textSize="10sp"
                android:text="fw Name"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/duration"
                android:layout_toRightOf="@+id/icon_node"
                android:layout_below="@id/fw_name"
                android:text="duration"
                />

            <Button
                android:id="@+id/btn_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15sp"
                android:layout_alignParentRight="true"
                android:text="ON"
                android:textSize="20sp"
                android:textStyle="bold"
                android:theme="@style/AppTheme.Button_on"/>

            <Button
                android:id="@+id/btn_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15sp"
                android:text="OFF"
                android:layout_alignTop="@+id/uptime"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:textSize="20sp"
                android:theme="@style/AppTheme.Button_off" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>