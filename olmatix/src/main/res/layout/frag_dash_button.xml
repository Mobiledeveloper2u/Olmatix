<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="0sp">


    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_node_radius">

        <RelativeLayout
            android:layout_width="104dp"
            android:layout_height="105dp"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/thumbpath">
                <ImageButton
                    android:id="@+id/icon_node"
                    android:layout_width="@dimen/node_width"
                    android:layout_height="@dimen/node_height"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/offlamp1"
                    android:stateListAnimator="@null"
                    android:theme="@style/AppTheme.Button"/>

                <ImageView
                    android:id="@+id/icon_sending"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_check_green" />
                <ImageView
                    android:id="@+id/icon_conn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_check_red"
                    android:visibility="visible"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_bg"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:id="@+id/node_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/node_title"
                    android:backgroundTintMode="@color/grey"
                    android:text="Node ID"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="10dp"/>
            </RelativeLayout>


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>